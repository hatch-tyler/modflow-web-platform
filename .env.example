# =============================================================================
# MODFLOW Web Platform - Environment Configuration
# =============================================================================
# Copy this file to .env and customize values for your deployment

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
DEBUG=false
SECRET_KEY=change-me-use-openssl-rand-hex-32

# -----------------------------------------------------------------------------
# PostgreSQL Database
# -----------------------------------------------------------------------------
POSTGRES_USER=modflow
POSTGRES_PASSWORD=modflow_secret_change_me
POSTGRES_DB=modflow_db

# -----------------------------------------------------------------------------
# Redis
# -----------------------------------------------------------------------------
REDIS_PASSWORD=redis_secret_change_me

# -----------------------------------------------------------------------------
# MinIO Object Storage
# -----------------------------------------------------------------------------
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin_secret_change_me

# -----------------------------------------------------------------------------
# MODFLOW Executables (paths inside container)
# -----------------------------------------------------------------------------
MODFLOW_EXE_PATH=/usr/local/bin/mf6
MODFLOW_NWT_EXE_PATH=/usr/local/bin/mfnwt
PESTPP_EXE_PATH=/usr/local/bin/pestpp-glm
PESTPP_IES_EXE_PATH=/usr/local/bin/pestpp-ies

# -----------------------------------------------------------------------------
# File Limits
# -----------------------------------------------------------------------------
MAX_UPLOAD_SIZE_MB=500
MAX_MODEL_FILES=1000
